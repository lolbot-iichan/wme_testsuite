on "LeftClick"
{
  var spritea = Scene.GetNode("a");
  var i = 0;
  var ba = spritea.X;
  while (i < 2000) {
	  spritea.X = ba - (i % 20);
	  Sleep(0.01);
	  i = i + 1;
  }
  
  spritea.X = ba;
}
