on "LeftClick"
{
  var spritea = Scene.GetNode("b");
  var spriteb = Scene.GetNode("c");
 var i = 0;
  var ba = spritea.X;
  var bb = spriteb.X;
  while (i < 2000) {
	  spritea.X = ba + (i % 40);
	  spriteb.X = bb - (i % 40);
	  Sleep(0.01);
	  // Won't redraw otherwise
	  i = i + 1;
  }

}
